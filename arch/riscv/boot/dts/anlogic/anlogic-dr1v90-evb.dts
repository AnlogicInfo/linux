/dts-v1/;
#include "anlogic-dr1v90.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>

/ {
	chosen {
		bootargs = "earlycon=sbi console=ttyS0,115200";
	};

	aliases {
		serial0 = &uart1;
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x00000000 0x0 0x3fe00000>;
	};

	console {
		compatible = "sbi,console";
	};
};

&cpus {
	timebase-frequency =<400000000>;
};

&cpu0 {
	clock-frequency = <400000000>;
};

&soc {
	UART_CLK: UART_CLK {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <50000000>;
		clock-output-names = "UART_CLK";
	};

	CAN_CLK: CAN_CLK {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <80000000>;
		clock-output-names = "CAN_CLK";
	};

	GPIO_CLK: GPIO_CLK {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <25000000>;
		clock-output-names = "GPIO_CLK";
	};

	IIC_CLK: IIC_CLK {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <40000000>;
		clock-output-names = "IIC_CLK";
	};

	leds {
		compatible = "gpio-leds";
		status = "okay";

		led1 {
			gpios = <&porta 14 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "heartbeat";
			status = "okay";
		};

		led2 {
			gpios = <&porta 13 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "heartbeat";
			status = "disabled";
		};

		led3 {
			gpios = <&porta 12 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "heartbeat";
			status = "disabled";
		};

	};

	keys {
		compatible = "gpio-keys";

		sw6 {
			gpios = <&porta 10 GPIO_ACTIVE_LOW>;
			linux,code = <103>;
			status = "okay";
		};
		sw8 {
			gpios = <&porta 11 GPIO_ACTIVE_HIGH>;
			linux,code = <108>;
			status = "okay";
		};
		sw5 {
			gpios = <&portc 0 GPIO_ACTIVE_HIGH>;
			linux,code = <108>;
			status = "okay";
		};

	};
};

&uart0 {
	clocks = <&UART_CLK>;
	clock-frequency = <50000000>;
	status = "disabled";
};

&uart1 {
	clocks = <&UART_CLK>;
	clock-frequency = <50000000>;
	status = "okay";
};

&ipmscan0 {
	clocks = <&CAN_CLK>;
	clock-names = "ipms_can_clk";
	status = "okay";
};

&ipmscan1 {
	clocks = <&CAN_CLK>;
	clock-names = "ipms_can_clk";
	status = "okay";
};

&i2c0 {
	clocks = <&IIC_CLK>;
	clock-names = "IIC_CLK";
	status = "okay";

	i2c-mux@74 {
		compatible = "nxp,pca9548";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x74>;
		status = "okay";

		i2c@2 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <2>;
			/*
			 * IIC_EEPROM 1kB memory which uses 256B blocks
			 * where every block has different address.
			 *    0 - 256B address 0x54
			 * 256B - 512B address 0x55
			 * 512B - 768B address 0x56
			 * 768B - 1024B address 0x57
			 */
			m24c08: eeprom@54 {
				compatible = "atmel,24c08";
				reg = <0x54>;
				pagesize = <16>;
				address-width = <8>;
				status = "okay";
			};
		};

		i2c@3 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <3>;
			ds1337: rtc@68 {
				compatible = "dallas,ds1337";
				reg = <0x68>;
				trickle-resistor-ohms = <250>;
				status = "okay";
			};
		};

	};
};

&i2c1 {
	clocks = <&IIC_CLK>;
	clock-names = "IIC_CLK";
	status = "okay";
};
