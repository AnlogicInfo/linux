/dts-v1/;
#include "anlogic-dr1v90.dtsi"

/ {
	chosen {
		bootargs = "earlycon=sbi console=ttyS0,115200";
	};

	aliases {
		serial0 = &uart1;
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x00000000 0x0 0x3fe00000>;
	};

	console {
		compatible = "sbi,console";
	};
};

&cpus {
	timebase-frequency =<400000000>;
};

&cpu0 {
	clock-frequency = <400000000>;
};

&soc {
	UART_CLK: UART_CLK {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <50000000>;
		clock-output-names = "UART_CLK";
	};

	CAN_CLK: CAN_CLK {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <80000000>;
		clock-output-names = "CAN_CLK";
	};
};

&uart0 {
	clocks = <&UART_CLK>;
	clock-frequency = <50000000>;
	status = "disabled";
};

&uart1 {
	clocks = <&UART_CLK>;
	clock-frequency = <50000000>;
	status = "okay";
};

&ipmscan0 {
	clocks = <&CAN_CLK>;
	clock-names = "ipms_can_clk";
	status = "okay";
};

&ipmscan1 {
	clocks = <&CAN_CLK>;
	clock-names = "ipms_can_clk";
	status = "okay";
};
